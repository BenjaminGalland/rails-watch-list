<div class="container">
  <h1>All your lists</h1>
  <ul class="list-group">
      <% @lists.each do |list|%>
        <div class="btn">
          <%= link_to list_path(list) do%>
            <li class="item">
              <% if list.photo.attached? %>
                <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key %>')">
                    <%= list.name %>
                </div>
                <%# <%= cl_image_tag list.photo.key, height: 300, width: 400, crop: :fill %>
              <% else %>
                   <%= list.name %>
              <% end %>
            </li>
          <% end %>
        </div>
      <% end %>
  </ul>
  <%= link_to "Add a new list", new_list_path, class: "mt-5 btn btn-primary" %>
</div>
